{
    "name": "react-unix-terminal",
    "version": "1.0.1",
    "license": "MIT",
    "main": "dist/ReactUnixTerminal.js",
    "types": "dist/ReactUnixTerminal.d.ts",
    "type": "module",
    "files": [
        "dist"
    ],
    "keywords": [
        "react terminal",
        "terminal",
        "web terminal",
        "web unix",
        "react unix terminal",
        "react-terminal"
    ],
    "scripts": {
        "setup": "yarn install --frozen-lockfile && cd server && yarn setup",
        "typecheck": "tsc -p tsconfig.json",
        "typecheck-watch": "yarn typecheck --w",
        "serve": "node server",
        "start": "(trap 'kill 0' INT; yarn serve & yarn build & yarn typecheck-watch)",
        "transpile": "node script/esbuild.js && cd build/ && cp index.html 200.html && cd ../ && node script/terser.js",
        "build": "rm -rf build && cp -R public build && yarn transpile",
        "build-prod": "rm -rf dist && tsc -p tsconfig.prod.json && ts-add-js-extension add --dir=dist && cp -r public/style.css dist/",
        "test": "esbuild test/index.ts --bundle --minify --target=node16.3.1 --platform=node --outfile=__tests__/index.test.js && jest __tests__",
        "lint": "eslint src/ test/ -f='stylish' --color",
        "format": "prettier --write src/ test/",
        "format-check": "prettier --check src/ test/",
        "all": "yarn typecheck && yarn format && yarn lint && yarn test && yarn build-prod"
    },
    "dependencies": {
        "html-react-parser": "^1.4.11",
        "parse-dont-validate": "^1.0.3",
        "sanitize-html": "^2.7.0"
    },
    "peerDependencies": {
        "react": ">=16",
        "react-dom": ">=16"
    },
    "devDependencies": {
        "@types/jest": "^27.4.1",
        "@types/node": "^17.0.23",
        "@types/react": "^18.0.1",
        "@types/react-dom": "^18.0.1",
        "@types/sanitize-html": "^2.6.2",
        "@typescript-eslint/eslint-plugin": "^5.19.0",
        "@typescript-eslint/parser": "^5.19.0",
        "esbuild": "^0.14.36",
        "eslint": "^8.13.0",
        "eslint-plugin-react": "^7.29.4",
        "jest": "^27.5.1",
        "prettier": "^2.6.2",
        "react": ">=16",
        "react-dom": ">=16",
        "ts-add-js-extension": "^1.0.2",
        "typescript": "^4.6.3"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/P-YNPM/react-unix-terminal"
    },
    "bugs": {
        "url": "https://github.com/P-YNPM/react-unix-terminal/issues"
    },
    "homepage": "https://github.com/P-YNPM/react-unix-terminal#readme"
}
