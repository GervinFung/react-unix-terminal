{
    "name": "react-unix-terminal",
    "version": "1.0.1",
    "license": "MIT",
    "main": "dist/ReactUnixTerminal.js",
    "types": "dist/ReactUnixTerminal.d.ts",
    "type": "module",
    "files": [
        "dist"
    ],
    "keywords": [
        "react terminal",
        "terminal",
        "web terminal",
        "web unix",
        "react unix terminal",
        "react-terminal"
    ],
    "scripts": {
        "installation": "pnpm i --frozen-lockfile && cd server && pnpm installation",
        "typecheck": "tsc -p tsconfig.json",
        "typecheck-watch": "pnpm typecheck --w",
        "serve": "node server",
        "start": "(trap 'kill 0' INT; pnpm serve & pnpm build & pnpm typecheck-watch)",
        "transpile": "node script/esbuild.js && cd build/ && cp index.html 200.html && cd ../",
        "build": "rm -rf build && cp -R public build && pnpm transpile",
        "build-prod": "rm -rf dist && tsc -p tsconfig.prod.json && ts-add-js-extension add --dir=dist && cp -r public/style.css dist/",
        "test": "vitest test/index.ts",
        "lint": "eslint src/ test/ -f='stylish' --color",
        "format": "prettier --ignore-path .gitignore --write src/ test/",
        "format-check": "prettier --ignore-path .gitignore --check src/ test/",
        "all": "pnpm typecheck && pnpm format && pnpm lint && pnpm test && pnpm build-prod"
    },
    "dependencies": {
        "html-react-parser": "^3.0.4",
        "parse-dont-validate": "^3.0.0",
        "remove": "^0.1.5",
        "sanitize-html": "^2.7.2"
    },
    "peerDependencies": {
        "react": ">=16",
        "react-dom": ">=16"
    },
    "devDependencies": {
        "@types/node": "^18.11.0",
        "@types/react": "^18.0.21",
        "@types/react-dom": "^18.0.6",
        "@types/sanitize-html": "^2.6.2",
        "@typescript-eslint/eslint-plugin": "^5.40.0",
        "@typescript-eslint/parser": "^5.40.0",
        "cases-of-test": "^0.0.0",
        "esbuild": "^0.15.12",
        "eslint": "^8.25.0",
        "eslint-plugin-react": "^7.31.10",
        "prettier": "^2.7.1",
        "react": ">=16",
        "react-dom": ">=16",
        "ts-add-js-extension": "^1.2.4",
        "typescript": "^4.8.4",
        "vitest": "^0.24.3"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/P-YNPM/react-unix-terminal"
    },
    "bugs": {
        "url": "https://github.com/P-YNPM/react-unix-terminal/issues"
    },
    "homepage": "https://github.com/P-YNPM/react-unix-terminal#readme"
}
